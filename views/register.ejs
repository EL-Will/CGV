<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
  <body>
    <%- include('../views/header')%>
    <section style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11 m-t-20 margin-b-20">
                    <div class="card text-black signup-form-color" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-7 col-xl-6 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                    <form class="mx-1 mx-md-4" id="registerForm">

                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="username" class="form-control"
                                                    placeholder="Tên" name="username" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errUsername"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fa-solid fa-phone fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="phone" class="form-control"
                                                    placeholder="Số điện thoại" name="phone" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errPhone"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="email" class="form-control"
                                                    placeholder="Email" name="email" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errEmail"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="password" class="form-control"
                                                    placeholder="Mật Khẩu" name="password" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errPassword"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="confirmpassword" class="form-control"
                                                    placeholder="Nhập Lại Mật Khẩu" name="confirmpassword" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errConfirmPassword"></div>

                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fa-solid fa-calendar-days fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" onfocus="(this.type='date')" id="dob"
                                                    class="form-control" placeholder="Ngày Sinh" name="birthday" />
                                            </div>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errDOB"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fa-solid fa-venus-mars fa-lg me-3 fa-fw"></i>
                                            <input type="radio" id="men" name="gender" value="Men" class="m-l-10">
                                            <span for="men" class="m-l-5">Nam</span>
                                            <input type="radio" id="women" name="gender" value="Women" class="m-l-10">
                                            <span for="women" class="m-l-5">Nữ</span>
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errGender"></div>
                                        <div class="d-flex flex-row align-items-center ">
                                            <i class="fa-solid fa-location-dot fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <select name="city" id="selectCity" class="select-city pd-city" required>
                                                    <option value="" disabled selected class="format-color">Khu Vực</option>
                                                </select>
                                            </div>  
                                        </div>
                                        <div class="err-inform padding-left margin-b-20" id="errCity"></div>
                                        <div class="form-check d-flex justify-content-center">
                                            <input class="form-check-input me-2 pos-check-input" type="checkbox"
                                                value="" id="agree" name="agree" />
                                            <label class="form-check-label" for="agree">
                                                Tôi đồng ý với <a href="#!" style="color: red;">Điều Khoản Sử Dụng của CGV</a>
                                            </label>
                                        </div>
                                        <div class="err-inform margin-b-30" id="errAgree"></div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-danger btn-lg width-btn-signup">Đăng Ký</button>
                                        </div>
                                        <label class="form-check-label">
                                            Bạn đã có tài khoản? <a href="/login">Đăng nhập</a>
                                        </label>
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-5 col-xl-6 d-flex align-items-center order-1 order-lg-2">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                        class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/js/register.js"></script>
    <script src="/js/common.js"></script>
</body>
</html>