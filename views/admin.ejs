<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body id="body">
    <!-- <h1><%=data%></h1> -->
    <div class="topnav">
        <a class="active" href="/admin-user">Users</a>
        <a href="/admin-films">Films</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
        <a href="/logout-admin">Logout</a>
    </div>

    <div style="padding-left:16px; padding-right:16px">
        <h2>List Users</h2>
        <div class="table-responsive">
            <table id="customers">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Role</th>
                    <!-- <th>Date Of Birth</th>
                    <th>Gender</th>
                    <th>Address</th> -->
                    <th>Action</th>
                </tr>
                <%for(let i=0; i< data.length; i++){%>
                    <tr>
                        <td>
                            <%=data[i].user_id%>
                        </td>
                        <td style="width: 150px">
                            <%=data[i].user_name%>
                        </td>
                        <td style="width: 100px">
                            <%=data[i].user_phone%>
                        </td>
                        <td style="width: 100px"> 
                            <%=data[i].user_email%>
                        </td>
                        <td style="word-break: break-all; width: 400px">
                            <%=data[i].user_password%>
                        </td>
                        <td>
                            <%=data[i].user_role%>
                        </td>
                        <!-- <td>
                            <%=data[i].user_dob%>
                        </td>
                        <td>
                            <%=data[i].user_gender%>
                        </td>
                        <td>
                            <%=data[i].user_city%>
                        </td> -->
                        <td>
                            <div class="template-demo">
                            <button
                                data-uid1="<%=data[i].user_id%>"
                                type="button"
                                class="btn btn-danger btn-icon-text user-detail"
                                data-toggle="modal" data-target="#userDetail"
                            >
                            Detail
                            </button>
                            <button
                                data-uid2="<%=data[i].user_id%>"
                                type="button"
                                class="btn btn-warning btn-icon-text user-edit"
                                data-toggle="modal" data-target="#userEdit"
                            >
                            Edit
                            </button>
                            <button
                                data-uid3="<%=data[i].user_id%>"
                                type="button"
                                class="btn btn-success btn-icon-text user-delete"
                            >
                            Delete
                            </button>
                            </div>
                        </td>
                        <!-- <td class="box-crud">
                            <a href="detail/user/<%=data[i].id%>" class="detail-btn">Detail</a>
                            <form action="/delete-user" method="post">
                                <input type="text" hidden value="<%=data[i].id%>" name="userId">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                            <form action="/edit-user/<%=data[i].id%>" method="get">
                                <button type="submit" class="edit-btn">Edit</button>
                            </form>
                        </td> -->
                    </tr>
                    <%}%>
    
            </table>
        </div>
       
        <div class="form-user">
            <h2 style="margin-top: 20px">Add Admin</h2>
            <form action="" method="post" id="addAdmin">
                <div class="box-inforuser">
                    <span><strong>Full Name</strong></span>
                    <br>
                    <input type="text" placeholder="Full Name"  name="username" id="username">
                    <span class="err-inform" id="errUsername"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Phone Number</strong></span>
                    <br>
                    <input type="text" placeholder="Phone Number"  name="phone" id="phone">
                    <span class="err-inform" id="errPhone"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Email</strong></span>
                    <br>
                    <input type="email" placeholder="Email"  name="email" id="email">
                    <span class="err-inform" id="errEmail"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Password</strong></span>
                    <br>
                    <input type="password" placeholder="Password"  name="password" id="password">
                    <span class="err-inform" id="errPassword"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Confirm Password</strong></span>
                    <br>
                    <input type="password" placeholder="Confirm Password"  name="confirmpassword" id="confirmpassword">
                    <span class="err-inform" id="errConfirmPassword"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Date Of Birth</strong></span>
                    <br>
                    <input type="date"  name="dob" id="dob">
                    <span class="err-inform" id="errDob"></span>
                </div>
                <div style="margin-top: 15px">
                    <span><strong>Gender</strong></span>
                    <br>
                    <input type="radio" id="men" name="gender" value="Men">
                    <span for="men" class="m-l-5">Nam</span>
                    <input type="radio" id="women" name="gender" value="Women" class="m-l-10">
                    <span for="women" class="m-l-5">Ná»¯</span>
                    <br>
                    <span class="err-inform" id="errGender"></span>
                </div>
                <div class="box-inforuser">
                    <span><strong>Address</strong></span>
                    <br>
                    <select name="city" id="selectCity" class="select-city pd-city" >
                        <option value="" disabled selected class="format-color">Address</option>
                    </select>
                    <span class="err-inform" id="errAddress"></span>
                </div>
                <div class="box-submit-btn">
                    <button type="submit" style="margin-bottom: 20px" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="modal" tabindex="-1" id="userDetail">
        <div class="modal-dialog modal-width">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">User Detail</h5>
            </div>
            <div class="modal-body modal-scroll">
                <div class="form-row">
                    <div class="form-group col-md-12">
                      <label for="inputID">ID</label>
                      <input type="text" readonly class="form-control" id="inputID">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputPhone">Phone</label>
                        <input type="text" readonly class="form-control" id="inputPhone">
                      </div>
                    <div class="form-group col-md-12">
                      <label for="inputUserName">User Name</label>
                      <input type="text" readonly class="form-control" id="inputUserName">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputEmail">Email</label>
                        <input type="email" readonly class="form-control" id="inputEmail">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputPassword">Password</label>
                        <input type="text" readonly class="form-control" id="inputPassword">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputRole">Role</label>
                        <input type="text" readonly class="form-control" id="inputRole">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputDob">Date Of Birth</label>
                        <input type="text" readonly class="form-control" id="inputDob">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputGender">Gender</label>
                        <input type="text" readonly class="form-control" id="inputGender">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputCity">City</label>
                        <input type="text" readonly class="form-control" id="inputCity">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeUserDetail">Close</button>
            </div>
          </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" id="userEdit">
        <div class="modal-dialog modal-width">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">User Edit</h5>
            </div>
            <div class="modal-body">
                <div class="modal-body modal-scroll-edit">
                    <form class="form-row" id="editForm">
                        <div class="form-group col-md-12">
                            <label for="editID">ID</label>
                            <input type="text" readonly class="form-control" id="editID">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="editPhone">Phone</label>
                            <input type="text"  class="form-control" id="editPhone" name="phone">
                            <span class="err-inform" id="errPhoneEdit"></span>
                        </div>
                        <div class="form-group col-md-12">
                          <label for="editUsername">User Name</label>
                          <input type="text" class="form-control" id="editUsername" name="username">
                          <span class="err-inform" id="errUsernameEdit"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="editRole">Role</label>
                            <input type="text" class="form-control" id="editRole" name="role">
                            <span class="err-inform" id="errRoleEdit"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="editDob">Date Of Birth</label>
                            <input type="text" onfocus="(this.type='date')" id="editDob"
                                class="form-control" name="dob"  />
                            <span class="err-inform" id="errDobEdit"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="editCity">City</label>
                            <input type="text" class="form-control" id="editCity" name="city">
                            <span class="err-inform" id="errCityEdit"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" style="width: 100%" class="btn btn-primary">Submit</button>
                            <div class="spinner-border text-light pos-absolute hide-spinner" id="loading"></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeUserEdit">Close</button>
            </div>
          </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/js/admin_user.js"></script>
</body>

</html>