        crossorigin="anonymous"></script>
      <script src="/js/common.js"></script>
      <script src="/js/detailMovie.js"></script>
      <script>
        const apiURL_CheckLogin = 'http://127.0.0.1:3000/api/v1/check-login-user';
        async function checkLogin() {
          const data = JSON.parse(
            JSON.stringify(
              await fetch(apiURL_CheckLogin)
                .then(res => res.json())
            )
          );
          if (data.status == true) {
            let path = window.location.pathname;
            let movieID = Number(path.slice(14));
            window.location.href = `/detail-movie/${movieID}`;
          }
        }
        checkLogin();
      </script>
      <div id="alert">

      </div>
</body>

